-# frozen_string_literal: true
= simple_form_for(@event_feedback) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :comment
    = f.file_field :pdf

  .form-actions
    = f.button :submit
