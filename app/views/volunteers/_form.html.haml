-# frozen_string_literal: true
= simple_form_for(@volunteer) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :contactnumber
    = f.input :addressone
    = f.input :addresstwo
    = f.input :email
    = f.input :postcode
    = f.input :hours
    = f.input :target

  .form-actions
    = f.button :submit
