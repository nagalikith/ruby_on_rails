%h1 Listing volunteers

- if @volunteers.length > 0

  %table
    %thead
      %tr
        %th Name
        %th Contactnumber
        %th Addressone
        %th Addresstwo
        %th Email
        %th Postcode
        %th Hours
        %th Target

    %tbody
      - @volunteers.each do |volunteer|
        %tr
          %td= volunteer.name
          %td= volunteer.contactnumber
          %td= volunteer.addressone
          %td= volunteer.addresstwo
          %td= volunteer.email
          %td= volunteer.postcode
          %td= volunteer.hours
          %td= volunteer.target
          %td= link_to 'Show', volunteer
          %td= link_to 'Edit', edit_volunteer_path(volunteer)
          %td= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' }

- else
  .error-message
    %h5 No volunteers available

%br

= link_to 'New Volunteer', new_volunteer_path
