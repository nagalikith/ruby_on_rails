-# frozen_string_literal: true
= simple_form_for(@event) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :date
    = f.input :comment
    = f.input :clubname
    = f.association :club

  .form-actions
    = f.button :submit
