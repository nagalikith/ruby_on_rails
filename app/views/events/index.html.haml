%h1 Listing events

%p There are #{@events.size} events to search through.

= simple_form_for :search, url: search_events_path, method: :post do |f|
  = f.input :clubname


  = f.submit 'Search'
  = link_to 'Reset', events_path

%br
%table
  %thead
    %tr
      %th Name
      -# %th Date
      %th Comment
      %th Start Time
      %th End Time
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        -# %td= event.date
        %td= event.comment
        %td= event.start_time
        %td= event.end_time
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Event', new_event_path
