%h1 Listing case_studies

- if @case_studies.length > 0

  %p There are #{@case_studies.size} case studies to search through.

  %table
    %thead
      %tr
        %th Date
        %th Participant
        %th Club
        %th Comment 
        %th
        %th

    %tbody#case-study-table
      = render 'casestudy_table'

- else
  .error-message
    %h5 No case studies exist

%br
.button.btn.btn-secondary
  = link_to 'New Case study', new_case_study_path, class: 'ajax-modal'
